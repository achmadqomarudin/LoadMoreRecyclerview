<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loadmorerecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_loading"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_loading"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoadMoreRecyclerView">
        <activity
            android:name=".LinearRecyclerView.LinearRecyclerViewActivity"
            android:label="@string/linear_rv_activity" />
        <activity
            android:name=".GridRecyclerView.GridRecyclerViewActivity"
            android:label="@string/grid_rv_activity" />
        <activity
            android:name=".StaggeredRecyclerView.StaggeredRecyclerViewActivity"
            android:label="@string/staggered_rv_activity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>